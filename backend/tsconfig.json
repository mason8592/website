{
    "compilerOptions": { // Many of these options were added based on Matt Pocock's video: https://www.youtube.com/watch?v=eJXVEju3XLM
      "module": "ESNext",
      "target": "ES6",
      "moduleResolution": "bundler",
      "noEmit": true,

      "lib": ["es2022"],

      "esModuleInterop": true,
      "skipLibCheck": true,
      "verbatimModuleSyntax": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",

      "strict": true,
      "noUncheckedIndexedAccess": true
    },
    "include": ["src"],
  }